{
    "files": ["custom.d.ts"],
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "sourceMap": true,
      "allowJs": true,
      "outDir": "build",
      "baseUrl": ".",
      "declaration": true,
      "skipLibCheck": true,
      "importHelpers": true,
      "lib": ["es2015", "es2016"],
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/*"],
    "exclude": ["node_modules"]
  }